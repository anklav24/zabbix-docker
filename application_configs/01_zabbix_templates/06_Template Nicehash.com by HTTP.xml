    <triggers>
        <trigger>
            <expression>{Template Nicehash.com by HTTP:devicesStatuses.MINING.last()}&lt;{Template Nicehash.com by HTTP:totalDevices.last()}</expression>
            <name>GPU Mining down</name>
            <opdata>devicesStatuses.MINING: {ITEM.LASTVALUE1} totalDevices: {ITEM.LASTVALUE2}</opdata>
            <priority>AVERAGE</priority>
        </trigger>
        <trigger>
            <expression>{Template Nicehash.com by HTTP:web.test.error[Check API].last(1m)}&lt;&gt;&quot;qwerty&quot;</expression>
            <name>Last error message of scenario &quot;Check API&quot;</name>
            <priority>WARNING</priority>
            <manual_close>YES</manual_close>
        </trigger>
        <trigger>
            <expression>{Template Nicehash.com by HTTP:minerStatuses.MINING.last()}&lt;{Template Nicehash.com by HTTP:totalRigs.last()}</expression>
            <name>Mining soft down</name>
            <opdata>minerStatuses.MINING: {ITEM.LASTVALUE1} totalRigs: {ITEM.LASTVALUE2}</opdata>
            <priority>HIGH</priority>
        </trigger>
        <trigger>
            <expression>{Template Nicehash.com by HTTP:web.test.rspcode[Check API,RIG LIST METHOD].last()}&lt;&gt;200</expression>
            <name>RIG LIST METHOD</name>
            <opdata>Response code: {ITEM.LASTVALUE1}</opdata>
            <priority>WARNING</priority>
        </trigger>
    </triggers>
